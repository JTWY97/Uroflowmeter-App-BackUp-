ScreenManager:
    id:screen_manager
    MainPage:
        id: MainPage
        name: 'Main'
        MDCard:
            size_hint: None, None
            size: 300, 450
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 25
            spacing: 25
            orientation: 'vertical'
        
            MDLabel:
                id: WelcomeLabel
                text: "WELCOME BACK!"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            MDRoundFlatButton:
                text: "Symptom Tracker"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.current = "SymptomTracker"
                    # root.manager.transition.direction = "left"

            MDRoundFlatButton:
                text: "Bladder Diary"
                font_size: 12
                pos_hint: {"center_x": 0.5}          
                        
            MDRoundFlatButton:
                text: "Fluid Intake"
                font_size: 12
                pos_hint: {"center_x": 0.5} 
                on_release:
                    root.current = "FluidIntake"
                    # root.manager.transition.direction = "left"
            
            MDFloatingActionButton:
                text: "Quick Pee!"
                icon: "water-plus"
                elevation_normal: 12
                pos_hint: {"center_x": 0.5} 
                # md_bg_color: app.theme_cls.primary_light

            Widget:
                size_hint_y: None
                height: 10


    SymptomTracker:
        id:SymptomTracker
        name: 'SymptomTracker'
        FloatLayout:
            MDLabel:
                id: Symptom_T
                text: "How are your symptoms!"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                pos_hint: {"top": .9, "center_x": .5}
                height: self.texture_size[1]  

            MDRoundFlatButton:
                text: "Open Date Picker!"
                font_size: 25
                size_hint: .5, .06
                pos_hint: {"top":0.7, "center_x": 0.5}
                on_release: app.show_date_picker()

            MDLabel:
                id: date_label
                text: "Some Stuff!"
                pos_hint: {"top":1.0, "center_x": 0.95}

            MDRoundFlatButton:
                text: "Back"
                font_size: 25
                size_hint: .5, .06
                pos_hint: {"top":0.5, "center_x": 0.5}
                on_release:
                    root.parent.current = "Main"
                    #root.manager.transition.direction = "right"
            Widget:
                size_hint_y: None
                height: 10
#<BladderDiary>:
    FluidIntake:
        id:FluidIntake
        name: 'FluidIntake'
        FloatLayout:
            MDLabel:
                id: Symptom_T
                text: "How much did you drink!"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                pos_hint: {"top": .9, "center_x": .5}
                height: self.texture_size[1]  

#Small button
            MDIconButton: 
                icon: 'bottle-soda-classic-outline'
                pos_hint: {"top":0.7, "center_x": 0.3}
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color

                id: btn1
                #text: 50
                on_release:
                    app.callback(button = 'button1')

#medium button
            MDIconButton:
                icon: 'bottle-soda-classic-outline'
                pos_hint: {"top":0.7, "center_x": 0.5}
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                user_font_size: "48sp"

                id: btn2
                #text: 60
                on_release:
                    app.callback(button = 'button2')

#Large button
            MDIconButton:
                icon: 'bottle-soda-classic-outline'
                pos_hint: {"top":0.7, "center_x": 0.7}
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                user_font_size: "64sp"

                id: btn3
                #text: 70
                on_release:
                    app.callback(button = 'button3')

#Delete Last Log
            MDRoundFlatButton:
                text: "Delete last entry"
                font_size: 25
                size_hint: .5, .06
                pos_hint: {"top":0.6, "center_x": 0.5}

                id: remove
                #text: 70
                on_release:
                    app.callback(button = 'button4')

            TextInput:
                text: "Volume here!"
                id: volumeop
                multiline: False
                readonly: True
                font_size: 43
                size_hint: (1,0.1)
                pos_hint: {"top":0.4, "center_x": 0.5}

            MDRoundFlatButton:
                text: "Back"
                font_size: 25
                size_hint: .5, .06
                pos_hint: {"top":0.5, "center_x": 0.5}
                on_release:
                    root.parent.current = "Main"
                    # root.manager.transition.direction = "right"
            Widget:
                size_hint_y: None
                height: 10