<FluidIntake>:
    GridLayout:
        rows: 4
        cols: 1
        FloatLayout:
            MDLabel:
                id: Symptom_T
                text: "How much did you drink today!"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                pos_hint: {"top": 1, "center_x": .5}

            MDIconButton:
                id: ButtonOne
                icon: "./Styles/FluidIntakeButtons/FluidIntakeSize1_250.png"
                pos_hint: {"top":0.9, "center_x": 0.3}
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                user_font_size: 150
                on_release:
                    root.callback(button = 'button1')

            MDIconButton:
                icon: "./Styles/FluidIntakeButtons/FluidIntakeSize2_500.png"
                pos_hint: {"top":0.9, "center_x": 0.5}
                theme_text_color: 'Custom'                    
                text_color: app.theme_cls.primary_color
                user_font_size: 150
                on_release:
                    root.callback(button = 'button2')

            MDIconButton:
                icon: "./Styles/FluidIntakeButtons/FluidIntakeSize3_1000.png"
                pos_hint: {"top":0.9, "center_x": 0.7}
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                user_font_size: 150
                on_release:
                    root.callback(button = 'button3')

        FloatLayout:
            TextInput:
                hint_text: "Custom Fluid Input"
                id: CustomVol
                readonly: False
                font_size: 25
                size_hint: .7, 0.2
                pos_hint: {"top":1, "center_x": 0.5}

            MDRoundFlatButton:
                text: "Submit"
                font_size: 25
                size_hint: .7, .2
                pos_hint: {"top":0.75, "center_x": 0.5}
                on_release:
                    root.CustomVolume(CustomVol.text)
        
            MDRoundFlatButton:
                text: "Delete last entry"
                font_size: 25
                size_hint: .7, .2
                pos_hint: {"top":0.3, "center_x": 0.5}
                on_release:
                    root.callback(button = 'button4')

        FloatLayout:
            TextInput:
                text: "Volume here!"
                id: volumeop
                multiline: False
                readonly: True
                font_size: 30
                size_hint: .7, 0.2
                pos_hint: {"top":0.9, "center_x": 0.5}
        
        FloatLayout:
            MDRoundFlatButton:
                text: "Back"
                font_size: 25
                size_hint: .7, 0.2
                pos_hint: {"top":0.5, "center_x": 0.5}
                on_release:
                    root.parent.current = "PatientHomePage"
                    root.manager.transition.direction = "right"