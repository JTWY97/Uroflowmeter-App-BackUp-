<FluidIntake>:
    GridLayout:
        rows: 5
        cols: 1
        row_default_height: 40
        FloatLayout:
            row_height: 10
            MDLabel:
                id: Symptom_T
                text: "How much did you drink today!"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                pos_hint: {"top": .9, "center_x": .5}

        FloatLayout:
            MDIconButton: 
                id: ButtonOne
                icon: "Styles/FluidIntakeButtons/FluidIntakeSize1_250.png"
                pos_hint: {"top":1, "center_x": 0.3}
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                user_font_size: 150
                on_release:
                    root.callback(button = 'button1')

            MDIconButton:
                icon: "Styles/FluidIntakeButtons/FluidIntakeSize2_500.png"
                pos_hint: {"top":1, "center_x": 0.5}
                theme_text_color: 'Custom'                    
                text_color: app.theme_cls.primary_color
                user_font_size: 150
                on_release:
                    root.callback(button = 'button2')

            MDIconButton:
                icon: "Styles/FluidIntakeButtons/FluidIntakeSize3_1000.png"
                pos_hint: {"top":1, "center_x": 0.7}
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                user_font_size: 150
                on_release:
                    root.callback(button = 'button3')
        FloatLayout:
            MDRoundFlatButton:
                text: "Delete last entry"
                font_size: 25
                size_hint: .7, .3
                pos_hint: {"top":0.7, "center_x": 0.5}
                on_release:
                    root.callback(button = 'button4')
        FloatLayout:
            TextInput:
                text: "Volume here!"
                id: volumeop
                multiline: False
                readonly: True
                font_size: 43
                size_hint: .7, 0.6
                pos_hint: {"top":0.9, "center_x": 0.5}
        FloatLayout:
            MDRoundFlatButton:
                text: "Back"
                font_size: 25
                size_hint: .7, 0.3
                pos_hint: {"top":0.5, "center_x": 0.5}
                on_release:
                    root.parent.current = "PatientHomePage"
                    root.manager.transition.direction = "right"