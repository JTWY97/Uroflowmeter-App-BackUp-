<FluidIntake>:
    GridLayout:
        rows: 5
        cols: 1
        FloatLayout:
            MDIconButton:
                id: DayOne
                pos_hint: {"top":0.6, "center_x": 0.2}
                icon: "./Styles/DayLogos/Day1.png"
                user_font_size: dp(80)
                on_press:
                    root.GetDay("DayOne")

            MDIconButton:
                id: DayTwo
                pos_hint: {"top":0.6, "center_x": 0.5}
                icon: "./Styles/DayLogos/Day2.png"
                user_font_size: dp(80)
                on_press:
                    root.GetDay("DayTwo")

            MDIconButton:
                id: DayThree
                pos_hint: {"top":0.6, "center_x": 0.8}
                icon: "./Styles/DayLogos/Day3.png"
                user_font_size: dp(80)
                on_press:
                    root.GetDay("DayThree")

        FloatLayout:
            MDLabel:
                id: VolumeDrankOnThisDay
                text: "How much did you drink today?"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                pos_hint: {"top": 1, "center_x": .5}

            MDIconButton:
                id: VolumeOne
                icon: "./Styles/FluidIntakeButtons/FluidIntakeSize1_250.png"
                pos_hint: {"top":0.6, "center_x": 0.3}
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                user_font_size: dp(130)
                on_release:
                    root.callback(button = 'button1')

            MDIconButton:
                id: VolumeTwo
                icon: "./Styles/FluidIntakeButtons/FluidIntakeSize2_500.png"
                pos_hint: {"top":0.6, "center_x": 0.5}
                theme_text_color: 'Custom'                    
                text_color: app.theme_cls.primary_color
                user_font_size: dp(130)
                on_release:
                    root.callback(button = 'button2')

            MDIconButton:
                id: VolumeThree
                icon: "./Styles/FluidIntakeButtons/FluidIntakeSize3_1000.png"
                pos_hint: {"top":0.6, "center_x": 0.7}
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color
                user_font_size: dp(130)
                on_release:
                    root.callback(button = 'button3')

        FloatLayout:
            TextInput:
                hint_text: "Custom Fluid Input"
                id: CustomVol
                readonly: False
                font_size: 25
                size_hint: .5, 0.4
                pos_hint: {"top":0.6, "center_x": 0.4}

            MDRoundFlatButton:
                text: "Submit"
                font_size: 25
                size_hint: .1, .3
                pos_hint: {"top":0.6, "center_x": 0.8}
                on_release:
                    root.CustomVolume(CustomVol.text)
        
        FloatLayout:
            MDRoundFlatButton:
                text: "Delete last entry"
                font_size: 25
                size_hint: .7, .2
                pos_hint: {"top":0.9, "center_x": 0.5}
                on_release:
                    root.callback(button = 'button4')

            TextInput:
                text: "Volume here!"
                id: volumeop
                multiline: False
                readonly: True
                font_size: 25
                size_hint: .7, 0.4
                pos_hint: {"top":0.6, "center_x": 0.5}
        
        FloatLayout:
            MDRoundFlatButton:
                text: "Back"
                font_size: 25
                size_hint: .7, 0.2
                pos_hint: {"top":0.7, "center_x": 0.5}
                on_release:
                    root.parent.current = "PatientHomePage"
                    root.manager.transition.direction = "right"