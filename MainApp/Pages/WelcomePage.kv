<WelcomePage>:
    FloatLayout:
        MDIconButton:
            user_font_size: dp(40)
            icon: "./Styles/AppLogo/WaterDrop.png"
            pos_hint: {"top":1, "center_x": 0.5}

        MDLabel:
            text: "Welcome to Ap-pee!"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            pos_hint: {"top": .8, "center_x": .5}
            height: self.texture_size[1]

        MDLabel:
            text: "I am a..."
            font_size: 30
            halign: 'center'
            size_hint_y: None
            pos_hint: {"top": .65, "center_x": .5}
            height: self.texture_size[1]


        MDIconButton:
            user_font_size: dp(40)
            icon: "./Styles/AppLogo/Patient.png"
            pos_hint: {"top":.6, "center_x": 0.5}

        MDRaisedButton:
            id: PatientLogIn
            text: "CURRENT USER"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top": .4, "center_x": .5}
            on_release:
                root.parent.current = "Patient_LogIn"
                root.manager.transition.direction = "left"
        
        MDRaisedButton:
            id: DoctorLogIn
            text: "NEW USER"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top": .3, "center_x": .5}
            on_release:
                root.parent.current = "NewUser_Patient"
                root.manager.transition.direction = "left"