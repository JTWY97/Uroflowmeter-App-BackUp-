<Patient_LogIn>:
    FloatLayout:
        MDLabel:
            id: WelcomeLabel_Patient
            text: "Welcome!"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            pos_hint: {"top": .9, "center_x": .5}
            height: self.texture_size[1]

        MDIconButton:
            user_font_size: dp(40)
            icon: "Styles/AppLogo/Patient.png"
            pos_hint: {"top":.8, "center_x": 0.55}

        MDIconButton:
            user_font_size: dp(40)
            icon: "Styles/AppLogo/WaterDrop.png"
            pos_hint: {"top":.8, "center_x": 0.45}

        MDTextFieldRound:
            id: User_Patient
            hint_text: "Patient Username"
            icon_right: "account"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.6, "center_x": 0.5}

        MDTextFieldRound:
            id: Password_Patient
            hint_text: "Password"
            icon_right: "eye-off"
            size_hint_x: None
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.5, "center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 25
            size_hint: .4, .06
            pos_hint: {"top":0.4, "center_x": 0.5}
            on_release:
                root.sign_in(User_Patient.text, Password_Patient.text)

        MDRoundFlatButton:
            text: "Back"
            font_size: 25
            size_hint: .4, .06
            pos_hint: {"top":0.3, "center_x": 0.5}
            on_release:
                root.parent.current = "Welcome_Page"
                root.manager.transition.direction = "right"   
