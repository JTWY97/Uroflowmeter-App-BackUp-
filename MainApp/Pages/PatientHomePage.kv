<PatientHomePage>:
    FloatLayout:
        MDIconButton:
            user_font_size: dp(40)
            icon: "./Styles/AppLogo/Patient.png"
            pos_hint: {"top":.8, "center_x": 0.55}

        MDIconButton:
            user_font_size: dp(40)
            icon: "./Styles/AppLogo/WaterDrop.png"
            pos_hint: {"top":.8, "center_x": 0.45}
            
        MDLabel:
            id: WelcomeLabel_Patient
            text: "Welcome!"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            pos_hint: {"top": .9, "center_x": .5}
            height: self.texture_size[1]

        MDRoundFlatButton:
            id: BladderDiary
            text: "Bladder Diary"
            font_size: 25
            size_hint: .4, .06
            pos_hint: {"top":0.7, "center_x": 0.5}    
            on_release:
                root.parent.current = "BladderDiary"
                        
        MDRoundFlatButton:
            id: FluidIntake
            text: "Fluid Intake"
            font_size: 25
            size_hint: .4, .06
            pos_hint: {"top":0.6, "center_x": 0.5}
            on_release:
                root.parent.current = "FluidIntake"

        MDRoundFlatButton:
            id: SymptomTracker
            text: "Generate Report"
            font_size: 25
            size_hint: .4, .06
            pos_hint: {"top":0.7, "center_x": 0.5}
            # on_release:
            #     root.parent.current = "SymptomTracker"
            
        MDFloatingActionButton:
            id: QuickPee
            text: "Quick Pee!"
            icon: "water-plus"
            elevation_normal: 12
            pos_hint: {"top":0.4, "center_x": 0.5}

        MDRoundFlatButton:
            id: LogOut_Patient
            text: "Log Out"
            font_size: 25
            size_hint: .4, .06
            pos_hint: {"top":0.3, "center_x": 0.5}
            on_release:
                app.sign_out_patient()