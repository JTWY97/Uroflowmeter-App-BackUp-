<BladderDiary>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        GridLayout:
            rows: 6
            size:(root.width, root.height)
            size_hint_y: None
            height: self.minimum_height
            row_default_height: 180
            FloatLayout:
                MDIconButton:
                    id: DayOne
                    pos_hint: {"top":0.7, "center_x": 0.2}
                    icon: "./Styles/BladderDiaryIcons/Morning.png"
                    on_press:
                        root.BuildTimeline("day 1")
                        root.ShowSummary("day 1")
                MDIconButton:
                    id: DayTwo
                    pos_hint: {"top":0.7, "center_x": 0.5}
                    icon: "./Styles/BladderDiaryIcons/Normal.png"
                    on_press:
                        root.BuildTimeline("day 2")
                        root.ShowSummary("day 2")
                MDIconButton:
                    id: DayThree
                    pos_hint: {"top":0.7, "center_x": 0.8}
                    icon: "./Styles/BladderDiaryIcons/Nocturia.png"
                    on_press:
                        root.BuildTimeline("day 3")
                        root.ShowSummary("day 3")
            FloatLayout:
                id: ErrorMessage
                Label:
                    pos_hint: {"top":1, "center_x": 0.5}
            MDList:
                id: BladderDiary
            MDList:
                id: BladderSummary
            MDRoundFlatButton:
                text: "Access Symptoms Here"
                on_press:
                    root.parent.current = "SymptomTracker"
            MDRoundFlatButton:
                text: "Back"
                on_press:
                    root.parent.current = "PatientHomePage"