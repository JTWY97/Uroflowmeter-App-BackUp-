<P>:
    FloatLayout:
        Button:
            text: "Yes!"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.65, "y":0.75}
            on_press:
                app.root.current = 'SymptomTracker'

<BladderDiary>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            rows: 6
            cols: 1  
            size:(root.width, root.height)
            size_hint_y: None
            height: self.minimum_height
            row_default_height: 40 

            FloatLayout:
                MDIconButton:
                    id: DayOne
                    pos_hint: {"top":0.7, "center_x": 0.2}
                    icon: "./Styles/DayLogos/Day1.png"
                    user_font_size: dp(80)
                    on_press:
                        root.BuildTimeline("day 1")
                        root.ShowSummary("day 1")
                MDIconButton:
                    id: DayTwo
                    pos_hint: {"top":0.7, "center_x": 0.5}
                    icon: "./Styles/DayLogos/Day2.png"
                    user_font_size: dp(80)
                    on_press:
                        root.BuildTimeline("day 2")
                        root.ShowSummary("day 2")
                MDIconButton:
                    id: DayThree
                    pos_hint: {"top":0.7, "center_x": 0.8}
                    icon: "./Styles/DayLogos/Day3.png"
                    user_font_size: dp(80)
                    on_press:
                        root.BuildTimeline("day 3")
                        root.ShowSummary("day 3")

            FloatLayout:
                id: ErrorMessage
                Label:
                    pos_hint: {"top":1, "center_x": 0.5}

            MDList:
                id: BladderDiary
                    
            MDList:
                id: BladderSummary

            MDRoundFlatButton:
                text: "Access Symptoms Here"
                on_press:
                    root.parent.current = "SymptomTracker"

            MDRoundFlatButton:
                id: current
                text: "Back"
                on_press:
                    root.parent.current = "PatientHomePage"