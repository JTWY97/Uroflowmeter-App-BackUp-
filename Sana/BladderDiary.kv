<DiarySummary>:
    font_size: 15
    height: 30
    text_size: self.size
    valign: 'middle'

<BladderDiary>:
    ScrollView:
        MDList:
            FloatLayout:
                MDRoundFlatButton:
                    text: "Show Detailed Timeline"
                    size_hint: 0.7, 0.05
                    spacing_x: 30
                    pos_hint: {"top": .9, "center_x": .5}
                    on_press:
                        root.parent.current = "BladderDiarySummary"

                GridLayout:
                    id: BladderSummary
                    pos_hint: {"top": .8, "center_x": .5}
                    cols: 1
                    padding : 5, 0
                    spacing: 10, 0
                    size_hint: 0.9, 0.3
                    pos: self.pos
                    size: self.size

                MDRoundFlatButton:
                    text: "Back"
                    size_hint: 0.7, 0.05
                    spacing_x: 30
                    pos_hint: {"top": .1, "center_x": .5}
                    on_press:
                        root.parent.current = "PatientHomePage"
