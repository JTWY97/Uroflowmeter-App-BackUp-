<NewUser_Doctor>:
    FloatLayout:
        MDLabel:
            id: WelcomeLabel
            text: "Welcome to Appee!"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            pos_hint: {"top": .9, "center_x": .5}
            height: self.texture_size[1]     

        MDTextFieldRound:
            id: FirstName_Doctor
            hint_text: "First Name"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.8, "center_x": 0.5}
        
        MDTextFieldRound:
            id: LastName_Doctor
            hint_text: "Last Name"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.7, "center_x": 0.5}

        MDTextFieldRound:
            id: Specialization
            hint_text: "Specialization"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.6, "center_x": 0.5}

        MDTextFieldRound:
            id: Hospital
            hint_text: "Hospital"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.5, "center_x": 0.5}

        MDTextFieldRound:
            id: PhoneNumber_Doctor
            hint_text: "Phone Number"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.4, "center_x": 0.5}

        MDTextFieldRound:
            id: Email_Doctor
            hint_text: "Email"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.3, "center_x": 0.5}

        MDTextFieldRound:
            id: Password_Doctor_SignUp
            hint_text: "Password"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.2, "center_x": 0.5}
            password: True

        MDRaisedButton:
            text: "Create Account"
            size_hint: .3, .06
            pos_hint: {"top": .1, "center_x": .5}
            on_release:
                root.sign_up(Email_Doctor.text, Password_Doctor_SignUp.text)