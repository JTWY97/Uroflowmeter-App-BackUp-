<BladderDiarySummary>:
    FloatLayout:
        GridLayout:
            id: BladderDiaryWidgets
            pos_hint: {"top": .9, "center_x": .5}
            cols: 1
            padding : 5, 0
            spacing: 10, 0
            size_hint: 0.9, 0.3
            pos: self.pos
            size: self.size

        MDRoundFlatButton:
            text: "Back"
            size_hint: 0.7, 0.05
            spacing_x: 30
            pos_hint: {"top": .1, "center_x": .5}
            on_press:
                root.parent.current = "BladderDiary"