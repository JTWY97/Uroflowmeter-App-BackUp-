<Welcome_Page>:
    name: 'Welcome'
    FloatLayout:
        MDLabel:
            text: "Log In As:"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            pos_hint: {"top": .9, "center_x": .5}
            height: self.texture_size[1]
        
        MDRaisedButton:
            id: DoctorLogIn
            text: "DOCTOR"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top": .7, "center_x": .5}
            on_release:
                root.parent.current = "Doctor_LogIn"
                root.manager.transition.direction = "left"

        MDRaisedButton:
            id: PatientLogIn
            text: "PATIENT"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top": .8, "center_x": .5}
            on_release:
                root.parent.current = "Patient_LogIn"
                root.manager.transition.direction = "left"

        Widget:
            size_hint_y: None
            height: 10