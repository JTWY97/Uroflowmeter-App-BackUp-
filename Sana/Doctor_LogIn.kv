<Doctor_LogIn>:
    FloatLayout:
        MDLabel: 
            id: WelcomeLabel_Doctor
            text: "Welcome!"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            pos_hint: {"top": .9, "center_x": .5}
            height: self.texture_size[1]

        MDIconButton:
            user_font_size: "90sp"
            icon: "Buttons/Doctor.png"
            pos_hint: {"top":.8, "center_x": 0.55}

        MDIconButton:
            user_font_size: "90sp"
            icon: "Buttons/WaterDrop.png"
            pos_hint: {"top":.8, "center_x": 0.45}

        MDTextFieldRound:
            id: User_Doctor
            hint_text: "Username"
            icon_right: "account"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.6, "center_x": 0.5}

        MDTextFieldRound:
            id: Password_Doctor
            hint_text: "Password"
            icon_right: "eye-off"
            size_hint_x: None
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.5, "center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "Log In"
            font_size: 25
            size_hint: .4, .06
            pos_hint: {"top":0.4, "center_x": 0.5}
            on_release:
                root.sign_in(User_Doctor.text, Password_Doctor.text)

        MDRoundFlatButton:
            text: "New User"
            font_size: 25
            size_hint: .4, .06
            pos_hint: {"top":0.3, "center_x": 0.5}
            on_release:
                root.parent.current = "NewDoctor_SignUp"

        MDRoundFlatButton:
            text: "Back"
            font_size: 25
            size_hint: .4, .06
            pos_hint: {"top":0.2, "center_x": 0.5}
            on_release:
                root.parent.current = "Welcome_Page"
                root.manager.transition.direction = "right"   

        Widget:
            size_hint_y: None
            height: 10