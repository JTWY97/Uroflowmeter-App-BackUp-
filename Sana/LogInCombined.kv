ScreenManager:
    Welcome_Page:
    Doctor_LogIn:
    Firebase_LoginScreen:
    Patient_LogIn:
    HomePage_Patient:
    HomePage_Doctor:

<Welcome_Page>:
    name: 'Welcome'
    FloatLayout:
        MDLabel:
            text: "Log In As:"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            pos_hint: {"top": .9, "center_x": .5}
            height: self.texture_size[1]
        MDRaisedButton:
            id: DoctorLogIn
            text: "DOCTOR"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top": .7, "center_x": .5}
            on_release:
                root.parent.current = "DoctorLogin"
                root.manager.transition.direction = "left"

        MDRaisedButton:
            id: PatientLogIn
            text: "PATIENT"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top": .8, "center_x": .5}
            on_release:
                root.parent.current = "PatientLogin"
                root.manager.transition.direction = "left"

        Widget:
            size_hint_y: None
            height: 10

<Doctor_LogIn>:
    name: 'DoctorLogin'
    FloatLayout:
        MDLabel:
            id: WelcomeLabel_Doctor
            text: "Welcome!"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            pos_hint: {"top": .9, "center_x": .5}
            height: self.texture_size[1]

        MDTextFieldRound:
            id: User_Doctor
            hint_text: "Username"
            icon_right: "account"
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.8, "center_x": 0.5}

        MDTextFieldRound:
            id: Password_Doctor
            hint_text: "Password"
            icon_right: "eye-off"
            size_hint_x: None
            font_size: 25
            size_hint: .7, .06
            pos_hint: {"top":0.7, "center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 25
            size_hint: .4, .06
            pos_hint: {"top":0.6, "center_x": 0.5}
            on_release:
                root.parent.current = "FirebaseLoginScreen"
                root.parent.parent.ids.DoctorLogIn.ids.User_Doctor.text = User_Doctor.text
                root.parent.parent.ids.DoctorLogIn.ids.Password_Doctor.text = Password_Doctor.text

        MDRoundFlatButton:
            text: "Back"
            font_size: 25
            size_hint: .4, .06
            pos_hint: {"top":0.5, "center_x": 0.5}
            on_release:
                root.parent.current = "Welcome"
                root.manager.transition.direction = "right"   

        Widget:
            size_hint_y: None
            height: 10

<Firebase_LoginScreen>:
    name: 'FirebaseLoginScreen'
    web_api_key: "AIzaSyBE439nHksT0x_MZ7gaD7rx3GwJh8VIBTM"
    on_login_success:
        root.parent.current = "DoctorHomePage"
        root.manager.transition.direction = "left"

    FloatLayout:
        MDLabel:
            text: "Welcome!"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            pos_hint: {"top": .9, "center_x": .5}
            height: self.texture_size[1]


